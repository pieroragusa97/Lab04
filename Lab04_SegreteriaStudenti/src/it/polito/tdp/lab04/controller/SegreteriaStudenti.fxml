<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="442.0" prefWidth="561.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab04.controller.SegreteriaStudentiController">
   <top>
      <Label text="Lab3_Segreteria Studenti" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </BorderPane.margin></Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="30.0">
               <children>
                  <Label text="Corso :" />
                  <ComboBox fx:id="btnScegliCorso" onAction="#doScegliCorso" prefWidth="200.0" promptText="Corsi" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" />
               </padding>
            </HBox>
            <Button fx:id="btnCercaIscritti" mnemonicParsing="false" onAction="#doCercaIscritti" text="Cerca iscritti corso">
               <VBox.margin>
                  <Insets bottom="15.0" left="20.0" />
               </VBox.margin>
            </Button>
            <HBox spacing="5.0">
               <children>
                  <Label text="Studente :" />
                  <TextField fx:id="NumeroM" prefWidth="100.0" />
                  <CheckBox ellipsisString="" mnemonicParsing="false" selected="true" />
                  <TextField fx:id="NomeStudente" editable="false" />
                  <TextField fx:id="CognomeStudente" editable="false" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" />
               </padding>
            </HBox>
            <HBox spacing="370.0">
               <children>
                  <Button fx:id="btnCercaCorsi" mnemonicParsing="false" onAction="#doCercaCorsi" text="Cerca corsi" />
                  <Button fx:id="btnIscrivi" mnemonicParsing="false" onAction="#doIscrivi" prefWidth="70.0" text="Iscrivi" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" />
               </padding>
            </HBox>
            <TextArea fx:id="AreaRisultato">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </TextArea>
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" prefWidth="60.0" text="Reset">
               <VBox.margin>
                  <Insets left="480.0" top="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
